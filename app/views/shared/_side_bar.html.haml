.chat-side
  .chat-side__user
    .chat-side__user--content
      %span.chat-side__user--content--name
        = current_user.name
      %span.chat-side__user--content--new-group
        = link_to new_group_path do
          %i.fa.fa-pencil-square-o
      %span.chat-side__user--edit-user
        = link_to edit_user_path(current_user) do
          %i.fa.fa-cog
  .chat-side__groups
    .chat-side__groups--group
      - current_user.groups.each do |group|
        %p.chat-side__group-name
          = group.name
        %p.chat-side__group-message
          メッセージはまだありません。
