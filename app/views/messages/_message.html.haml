.chat-main__body--message{ "data-message-id": "#{message.id}"}
  .chat-main__body--message-user
    %p
      = message.user.name
  .chat-main__body--message-time
    %p
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .chat-main__body--message-content
    %p
      = message.body
      = image_tag message.image
