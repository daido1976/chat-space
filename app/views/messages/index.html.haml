= render "layouts/flash"
.chat-side
  .chat-side__user
    .chat-side__user--content
      %span.chat-side__user--content--name
        = current_user.name
      %span.chat-side__user--content--new-group
        = link_to new_group_path do
          %i.fa.fa-pencil-square-o
      %span.chat-side__user--edit-user
        = link_to edit_user_path(current_user) do
          %i.fa.fa-cog
  .chat-side__groups
    .chat-side__groups--group
      %p.chat-side__group-name aaa
      %p.chat-side__group-message



.chat-main
  .chat-main__header
    .chat-main__header--group.clearfix
      .chat-main__header--group-name
        %h1 sample
      %a.chat-main__header--group-edit
        %p Edit
    .chat-main__header--members
      %h4 members

  .chat-main__body
    .chat-main__body--message-lists
      .chat-main__body--message
        .chat-main__body--message-user
          %p daido
        .chat-main__body--message-time
          %p 2017/12/25
        .chat-main__body--message-content
          %p お腹すいた
      .chat-main__body--message
        .chat-main__body--message-user
          %p daido
        .chat-main__body--message-time
          %p 2017/12/25
        .chat-main__body--message-content
          %p お腹すいた

  .chat-main__footer
    %form.chat-main__footer-form
      .chat-main__footer-form--body
        %input{class: "message", placeholder: "type a message", type: "text"}
        %label{class: "chat-file", for: "message_image"}
          %input{class: "image", type: "file", id: "message_image", style: "display:none"}
            %i.fa.fa-picture-o
      %input{class: "submit", type: "submit", value: "Send"}
